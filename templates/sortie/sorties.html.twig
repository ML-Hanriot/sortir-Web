{% extends 'base.html.twig' %}

{% block body %}
    <div class="positionright">
        Date du jour : {{ "now"|date("d/m/Y") }} <br>
        {% if app.user %}
            Participant : {{ app.user.pseudo }}
        {% else %}
            Participant : Non connecté
        {% endif %}
    </div>

    <div class="filter-container">
        <h2>Filtrer les sorties</h2>
        <form method="get">
            <div>
                <label for="campus">Campus :</label>
                <select name="campus" id="campus">
                    <option value="">Tous les campus</option>
                    {% for c in campus %}
                        <option value="{{ c.id }}" {% if filters.campus == c.id %}selected{% endif %}>{{ c.nom }}</option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <label for="nom">Le nom de la sortie contient :</label>
                <input type="text" name="nom" id="nom" value="{{ filters.nom }}">
            </div>
            <div>
                Entre : <input type="date" name="date_debut" id="date_debut" value="{{ filters.date_debut }}">
                et <input type="date" name="date_fin" id="date_fin" value="{{ filters.date_fin }}">
            </div>
            <div class="checkbox-group">
                <input type="checkbox" name="organisateur" id="organisateur" {% if filters.organisateur %}checked{% endif %}>
                <label for="organisateur">Sorties dont je suis l'organisateur/trice</label><br>
                <input type="checkbox" name="inscrit" id="inscrit" {% if filters.inscrit %}checked{% endif %}>
                <label for="inscrit">Sorties auxquelles je suis inscrit/e</label><br>
                <input type="checkbox" name="pasinscrit" id="pasinscrit" {% if filters.pasinscrit %}checked{% endif %}>
                <label for="pasinscrit">Sorties auxquelles je ne suis pas inscrit/e</label><br>
                <input type="checkbox" name="passer" id="passer" {% if filters.passer %}checked{% endif %}>
                <label for="passer">Sorties passées</label><br>
            </div>
            <button type="submit" class="btn btn-primary">Rechercher</button>
        </form>
    </div>

    <div class="table-container">
        <table class="styled-table">
            <thead>
            <tr>
                <th scope="col">Nom de la sortie</th>
                <th scope="col">Date de la sortie</th>
                <th scope="col">Clôture</th>
                <th scope="col">Inscrits / Places</th> <!-- Affichage du nombre d'inscrits et places max -->
                <th scope="col">État</th>
                <th scope="col">Organisateur</th>
                <th scope="col">Inscrit</th> <!-- Nouvelle colonne -->
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for sortie in sorties %}
                <tr>
                    <td>{{ sortie.nom }}</td>
                    <td>{{ sortie.dateHeureDebut|date('d/m/Y H:i') }}</td>
                    <td>{{ sortie.dateLimiteInscription|date('d/m/Y') }}</td>
                    <td>{{ sortie.participants|length }}/{{ sortie.nbInscriptionsMax }}</td> <!-- Nombre d'inscrits -->
                    <td>{{ sortie.etat.libelle }}</td>
                    <td>{{ sortie.organisateur.nom }}</td>
                    <td>
                        {% if sortie.isInscrit %}
                            X
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('app_voir', {'id': sortie.id}) }}">Afficher Sortie</a>
                        {% if sortie.organisateur == app.user %}
                            <a href="{{ path('app_modifier', {'id': sortie.id}) }}">Modifier</a>
                            <a href="{{ path('app_supprimer', {'id': sortie.id}) }}">Supprimer</a>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">Aucune sortie disponible</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="create-button">
        <button type="button" class="btn btn-primary" onclick="window.location.href='{{ path('app_creer') }}'">
            Créer une sortie
        </button>
    </div>
{% endblock %}
