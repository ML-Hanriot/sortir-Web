{% extends 'base.html.twig' %}

{% block title %}Gestion des Utilisateurs{% endblock %}

{% block body %}
    <div class="user-management-wrapper">
        <h1 class="page-title">Liste des utilisateurs</h1>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Pseudo</th>
                    <th>Email</th>
                    <th>Actif</th>
                    <th>Administrateur</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for participant in participants %}
                    <tr>
                        <td>{{ participant.pseudo }}</td>
                        <td>{{ participant.mail }}</td>
                        <td>{{ participant.actif ? 'Oui' : 'Non' }}</td>
                        <td>{{ participant.administrateur ? 'Oui' : 'Non' }}</td>
                        <td class="actions-column">
                            <a href="{{ path('user_toggle_active', { id: participant.id }) }}" class="btn btn-sm btn-warning">
                                {{ participant.actif ? 'Rendre inactif' : 'Rendre actif' }}
                            </a>
                            <a href="{{ path('user_toggle_admin', { id: participant.id }) }}" class="btn btn-sm btn-info">
                                {{ participant.administrateur ? 'Retirer admin' : 'Passer admin' }}
                            </a>
                            <a href="{{ path('user_delete', { id: participant.id }) }}" class="btn btn-sm btn-danger"
                               onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                                Supprimer
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
