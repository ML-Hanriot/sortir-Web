{% extends 'base.html.twig' %}

{% block title %}Ajouter une Ville{% endblock %}

{% block body %}
    <div class="form-wrapper">
        <h1 class="form-title">Ajouter une ville</h1>

        <div class="form-container">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }} <!-- Nom de la ville -->
            </div>
            <div class="form-group">
                {{ form_row(form.codePostal, {'attr': {'class': 'form-control'}}) }} <!-- Code postal -->
            </div>
            <div class="form-actions">
                <button class="btn btn-primary">Ajouter</button>
                <a href="{{ path('villes_index') }}" class="btn btn-secondary">Retour Ã  la liste des villes</a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
